@model HaragApp.Models.City

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h1 class="mt-4 text-center">تعديــل</h1>
        <h3 class="mt-4 text-center text-danger">برجاء البحث عن خطوط الطول و العرض للمدينة من <a href="https://www.google.com/" class="p-3 mb-2 bg-primary text-white" target="_blank">محرك بحث جوجل للدقة</a></h3>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CityID" />
                    <div class="form-group">
                        <label asp-for="CityName" class="control-label">اسم المدينــة</label>
                        <input asp-for="CityName" class="form-control" />
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Langtude" class="control-label">خط الطــول</label>
                        <input asp-for="Langtude" class="form-control" />
                        <span asp-validation-for="Langtude" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Lantitude" class="control-label">خط العــرض</label>
                        <input asp-for="Lantitude" class="form-control" />
                        <span asp-validation-for="Lantitude" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="حفــظ" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">العودة إلى القائمة الرئيسيــة</a>
        </div>

    </div>