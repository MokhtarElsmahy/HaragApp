<!-- Feature Section -->
<section class="feature-section" style="background-image:url(/Home/images/background/22.jpg);">
    <div class="auto-container">
        <div class="title-box">
            <h2>اعلانات مموله</h2>
        </div>

        <div class="features-carousel owl-carousel owl-theme">

            @foreach (var item in Model.PaidAdvs)
            {
                <!-- Feature block -->
                <div class="feature-block">
                    <div class="inner-box">
                        <div class="image-box">
                            @*<a asp-action="Details" asp-controller="Advertisments" asp-route-id="@item.AdID">*@
                            <img src="@item.ImageUrl1" alt="" class="img-thumbnail" style="height:200px;width:500px;">
                            @*</a>*@

                        </div>
                        <div class="lower-content">
                            <h3>@item.Title</h3>
                            <a href="@item.URL" class="read-more" target="_blank"> التفاصيــل<i class="fa fa-angle-left"></i></a>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</section>
<!-- End Feature Section -->
<!-- Gallery Section -->
<section class="gallery-section">
    <div class="auto-container">
        <div class="sec-title text-center">
            <h2>الأصنــاف</h2>
            <div class="separator"><i class="fas fa-arrow-alt-circle-down"></i></div>
        </div>

        <!--MixitUp Galery-->
        <div class="mixitup-gallery">
            <!--Filter-->
            <div class="filters text-center clearfix">
                <ul class="filter-tabs filter-btns clearfix">
                    <li class="active filter" data-role="button" data-filter="all">الكل</li>

                    @foreach (var item in Model.animalCategories)
                    {
                        <li class="filter" data-role="button" data-filter=".@item.CategoryName">@item.CategoryName</li>

                    }

                </ul>
            </div>

            <div class="filter-list row clearfix">
                <!-- Project item -->

                @foreach (var item in Model.advertisments)
                {
                    <div class="gallery-item mix all @item.CategoryName wheel conditioner col-lg-4 col-md-6 col-sm-12">
                        <div class="image-box">
                            <figure class="image"><img src="@item.ImageUrl1" style="width:370px;height:370px" alt=""></figure>
                            <div class="overlay-box">
                                <div class="icon-box">
                                    <h3><a href="shop-single.html">@item.Title</a></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
</section>
<!-- End Gallery section -->
<!-- count Section -->
<section class="subscribe-section">
    <div class="auto-container">
        <div class="inner-container clearfix">
            <h3>يمكنك التواصل مع المالك لإضافة إعلان ممول من هنا  </h3>
            <a href="https://wa.me/@Model.config.Mobile1" class="call-btn">اضغط هنا للتواصــل</a>
        </div>
    </div>
</section>
<!-- End count Section -->
<!-- News section -->
<section class="news-section" style="background-image: url(images/background/pattern.png);">
    <div class="auto-container">
        <div class="title-box text-right">
            <h2>الاكثر تفضيلا</h2>
        </div>

        <!-- News Carousel -->
        <div class="news-carousel owl-carousel owl-theme">

            @foreach (var item in Model.TOPadvertisments)
            {
                <div class="news-block">
                    <div class="inner-box clearfix">
                        <div class="image-box">
                            <div class="image"><a href="shop-single.html"><img src="@item.ImageUrl1" style="width:290px;height:270px" alt=""></a></div>
                        </div>
                        <div class="content-box">
                            <h3><a href="shop-single.html">@item.Title</a></h3>
                            <ul class="info">
                                <li><a href="shop-single.html"> @item.CityName - </a></li>
                                <li><a href="shop-single.html">@item.CategoryName</a></li>
                            </ul>
                            <p style="text-overflow: ellipsis; overflow: hidden;  white-space: nowrap; width:100%;">@item.Description</p>
                            <a asp-action="Details" asp-controller="Advertisments"  asp-route-id="@item.AdID" class="read-more">المزيد <i class="fa fa-angle-double-left"></i></a>
                        </div>
                    </div>
                </div>

            }
            <!-- News Block -->



        </div>
    </div>
</section>
<!-- End News section -->
