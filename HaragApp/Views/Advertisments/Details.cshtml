<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix rtl-dir">
            <div class="content-column col-lg-9 col-md-12 col-sm-12">
                <div class="product-details">

                    <!--Basic Details-->
                    <div class="basic-details">
                        <div class="row clearfix">
                            <div class="image-column col-lg-5 col-md-12 col-sm-12">
                                <figure class="image-box mt-3"><img id="shownImg" src="@Model.ImageUrl1" alt=""></figure>
                            </div>
                            <div class="info-column col-lg-7 col-md-12 col-sm-12">
                                <div class="inner-column">
                                    <div class="details-header">
                                        <h4>@Model.Title</h4>
                                        <li><a href="profile.html"><i class="far fa-user-circle profile"></i> @Model.userPhone </a></li>
                                        <ul class="info">
                                            <li><a href=""><i class="fas fa-map-marker-alt"></i>  @Model.CityName  </a></li>

                                            <p>رقم الاعلان : <b>@Model.AdID</b></p>


                                        </ul>
                                    </div>
                                    @*<div class="text">@Model.Description</div>*@
                                    <div class="clearfix">
                                        <button onclick="addtoFav(@Model.AdID)" type="button" class="btn btn-danger btn-block mb-1"> أضف الي المفضله  <i class="fa  fa-heart fa-1x " aria-hidden="true"></i></button>
                                        <a href="https://wa.me/@Model.userPhone"> <button type="button" class="btn btn-success btn-block">  تواصل واتســاب <i class="fab  fa-whatsapp fa-1x " aria-hidden="true"></i></button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Basic Details-->
                    <!--Product Info Tabs-->
                    <div class="product-info-tabs">

                        <!--Product Tabs-->
                        <div class="prod-tabs tabs-box" id="product-tabs">

                            <!--Tab Btns-->
                            <ul class="tab-btns tab-buttons clearfix">
                                <li data-tab="#prod-description" class="tab-btn ">الوصف </li>
                                <li data-tab="#prod-reviews" class="tab-btn active-btn">التقييمات</li>
                            </ul>

                            <!--Tabs Content-->
                            <div class="tabs-container tabs-content">

                                <!--Tab / Active Tab-->
                                <div class="tab active-tab" id="prod-description">

                                    <div class="content">
                                        <p>
                                            @Model.Description
                                        </p>
                                    </div>
                                </div>

                                <!--Tab-->
                                <div class="tab " id="prod-reviews">

                                    <!--Reviews Container-->
                                    <div class="reviews-container">
                                        @{
                                            foreach (var com in Model.comments)
                                            {

                                                <!--Reviews-->
                                                <article class="review-box clearfix">
                                                    <figure class="rev-thumb"><img src="~/assets/img/userLogo.png" alt=""></figure>
                                                    <div class="rev-content">
                                                        <div class="rev-info"><span>@com.Name</span>@com.Date.ToShortDateString()</div>
                                                        <div class="rev-text"><p>@com.CommentText</p></div><br />
                                                        @if (SignInManager.IsSignedIn(User))
                                                        {
                                                            var user = await UserManager.GetUserAsync(User);
                                                            var roles = await UserManager.GetRolesAsync(user);
                                                            if (roles.Contains("admin"))
                                                            {
                                                                <div><a asp-route-commentID="@com.CommentID" asp-route-advID="@com.advID" asp-controller="Advertisments" asp-action="RemoveComment" class="btn btn-danger">مسح التعليق</a></div>
                                                            }
                                                        }
                                                    </div>
                                                </article>

                                            }
                                        }

                                    </div>

                                    <!-- Comment Form -->
                                    <div class="shop-comment-form">
                                        <h2>أضف تقييم</h2>
                                        <form asp-action="AddComment" asp-controller="Advertisments" method="post">
                                            <div class="form-group">
                                                <label>الاسم</label>
                                                <input type="text" name="Name" placeholder="" required id="Name">

                                            </div>
                                            <div class="form-group">
                                                <label>تعليقك</label>
                                                <textarea name="CommentText" placeholder="" id="CommentText"></textarea>
                                            </div>
                                            <input name="advID" type="hidden" value="@Model.AdID">
                                            @if (SignInManager.IsSignedIn(User))
                                            {
                                                <div class="form-group">
                                                    <button class="theme-btn btn-style-two" type="submit" name="submit-form">ارسل الان</button>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="form-group">
                                                     <button  class="theme-btn btn-style-two" type="button" disabled>برجاء تسجيل الدخول اولا</button>
                                                </div>
                                            }


                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- End product info tabs -->

                </div>
            </div>

            <!--Sidebar Side-->
            <div class="sidebar-side col-lg-3 col-md-12 col-sm-12">
                <aside class="sidebar default-sidebar">
                    <!--search box-->
                    <div class="sidebar-widget search-box">
                        <form asp-action="Shop">
                            <div class="form-group">
                                <input type="search" value="@Model.search" name="search" placeholder="ابحث هنا" required="">
                                <input value="@Model.CategoryID" name="CategoryId" type="hidden" />

                                <button type="submit"><span class="icon fa fa-search"></span></button>
                            </div>
                        </form>
                    </div>

                    <div class="sidebar-widget related-posts">
                        <div class="sidebar-title" style="text-align:center"><h2>صــور المنتــج</h2></div>
                        <div class="widget-content">
                            <div class="row">
                                <div class="col-6">
                                    <img class="replaceImg img-thumbnail rounded" style="width:100%;height:100%;" src="@Model.ImageUrl1" alt="">
                                </div>
                                <div class="col-6">
                                    <img class="replaceImg img-thumbnail rounded" style="width:100%;height:100%;" src="@Model.ImageUrl2" alt="">
                                </div>
                            </div>

                            <div class="row mt-1">
                                <div class="col-6">
                                    <img class="replaceImg img-thumbnail rounded" style="width:100%;height:100%;" src="@Model.ImageUrl3" alt="">
                                </div>
                                <div class="col-6">
                                    <img class="replaceImg img-thumbnail rounded " style="width:100%;height:100%;" src="@Model.ImageUrl4" alt="">
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-6 m-auto">
                                    <img class="replaceImg img-thumbnail rounded" style="width:100%;height:100%;" src="@Model.ImageUrl5" alt="">
                                </div>

                            </div>



                        </div>
                    </div>
                </aside>
            </div>

        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        //Tabs Box
        if ($('.tabs-box').length) {
            $('.tabs-box .tab-buttons .tab-btn').on('click', function (e) {
                e.preventDefault();
                var target = $($(this).attr('data-tab'));

                if ($(target).is(':visible')) {
                    return false;
                } else {
                    target.parents('.tabs-box').find('.tab-buttons').find('.tab-btn').removeClass('active-btn');
                    $(this).addClass('active-btn');
                    target.parents('.tabs-box').find('.tabs-content').find('.tab').fadeOut(0);
                    target.parents('.tabs-box').find('.tabs-content').find('.tab').removeClass('active-tab');
                    $(target).fadeIn(300);
                    $(target).addClass('active-tab');
                }
            });
        }

        var imgs = document.getElementsByClassName("replaceImg");
        var currImg = document.getElementById("shownImg");
        for (i = 0; i < imgs.length; i++) {
            imgs[i].addEventListener("click", function () {
                currImg.src = this.src;

            })
        }


        var addtoFav = function (id) {
            $.ajax({
                url: "/Advertisments/AddToFav",
                type: "POST",
                dataType: "json",
                data: {
                    adID: id
                },
                success: function (result) {
                    if (result.message == "success") {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'تم الإضافة إلى المفضلة',
                            showConfirmButton: false,
                            timer: 3000
                        });


                    } else if (result.message == "Please Login First") {
                        Swal.fire({
                            icon: 'error',
                            title: 'برجاء تسجيل الدخول',
                            text: 'حاول مرة اخري',
                        });

                    }


                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'حدث خطأ',
                        text: 'حاول مرة اخري',
                    });

                }
            });
        }

    </script>

}
