}


<!--Page Title-->
<section class="page-title" style="background-image:url(@Model.SliderImage);">
	<div class="auto-container">
		<div class="inner-container clearfix">
			<h1>تعديل اعلاني </h1>
			
		</div>
	</div>
</section>
<!--End Page Title-->
